{% extends 'JoeZafiroBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Canales list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Subida</th>
                <th>Bajada</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('canales_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.subida }}Kbps</td>
                <td>{{ entity.bajada }}Kbps</td>
                <td>{{ entity.estado }}</td>
                <td>
                    <a href="{{ path('canales_show', { 'id': entity.id }) }}">show</a>
                    <a href="{{ path('canales_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('canales_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
